
<div class="row-fluid center-elem">
    <h1>Лоты для голосования</h1>
</div>    
<div>
<div class="row-fluid center-elem">
  <div class="span12">

<table class="table table-striped">
  <tr>
    <th>Имя</th>
    <th>Описание</th>
    <th>Картинка</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lots.each do |lot| %>
  <tr>
    <td><%= lot.name %></td>
    <td><%= lot.description %></td>
    <td><%= image_tag lot.image.url(:thumb), :class => "img-polaroid"  %></td>
    <td><%= link_to 'Открыть', lot, :class => "btn btn-info" %></td>
    <td><%= link_to 'Редактировать', edit_lot_path(lot), :class => "btn btn-warning" %></td>
    <td><%= link_to 'Удалить', lot, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Lot', new_lot_path %>
  </div>
</div>
