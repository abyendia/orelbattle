<div class="row-fluid center-elem">
<%= form_for(@lot, :html => {:multipart => true, :class => "form-horizontal"}) do |f| %>
  <% if @lot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lot.errors.count, "error") %> prohibited this lot from being saved:</h2>

      <ul>
      <% @lot.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="control-group">
    <label class="control-label" for="inputEmail"> Имя </label>
    <div class="controls">
      <%= f.text_field :name %><br />
    </div>  
  </div>
  <div class="control-group">
    <label class="control-label" for="inputEmail"> Описание </label>   
    <div class="controls">
    <%= f.text_area :description, :rows => 3, :col => 3 %><br />
    </div>     
  </div>  
  <div class="control-group">
    <div class="controls">    
      <%= f.file_field :image %> 
    </div>
  </div>
</div>  
<div class="row-fluid center-elem">  
  <div class="control-group">
    <div class="controls">    
      <%= f.submit :class => "btn", :value => "Обновить картинку" %>
    </div>
  </div>
</div>    

<% end %>
