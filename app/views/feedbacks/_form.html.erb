


<%= form_for(@feedback, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% @feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
      <%= f.label "Имя", :class => "control-label",  :for=>"inputEmail" %>
      <div class="controls">
        <%= f.text_field :name, :id=>"inputPassword", :placeholder=>"Представьтесь" %>
      </div>
  </div>

  <div class="control-group">
      <%= f.label "E-mail", :class => "control-label",  :for=>"inputEmail" %>
      <div class="controls">
        <%= f.text_field :email, :id=>"inputPassword", :placeholder=>"Ваше мыло?" %>
      </div>
  </div>


  <div class="control-group">
      <%= f.label "Сообщение", :class => "control-label",  :for=>"inputEmail" %>
      <div class="controls">
        <%= f.text_area :theme, :id=>"inputPassword", :placeholder=>"Ну как вам..." %>
      </div>
  </div>    

  <div class="control-group">
      <div class="controls">
        <%= f.submit "Отправить отзыв",:class => "btn" %>
      </div>
  </div>  

 
<% end %>