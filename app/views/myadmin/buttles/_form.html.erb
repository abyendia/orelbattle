      <% end %>
      </ul>
    </div>
  <% end %>




<div class="control-group">
  <div class="control-label">Название битвы </div>
  <div class="controls">
    <%= f.text_field :name %>
  </div>  
</div>  

<div class="control-group">
  <div class="control-label">Описание битвы </div>
  <div class="controls">
    <%= f.text_area :description %>
  </div>  
</div> 

<div class="control-group">
  <div class="control-label">Оппонент 1 </div>
  <div class="controls">
    <span id="img_after_ajax_1">
      <% unless @buttle.new_record? %>
      <%= image_tag(@buttle.opponent_first.image.url(:small)) if  @buttle.try(:opponent_first)   %>
      <% end %> 
    </span>
    <%= f.hidden_field :opponent_1, :id => "after_ajax_1"   %>
