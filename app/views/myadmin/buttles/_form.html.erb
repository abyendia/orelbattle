</div> 

<div class="control-group">
  <div class="control-label">Оппонент 2 </div>
  <div class="controls">
    <span id="img_after_ajax_2">
      <% unless @buttle.new_record? %>      
        <%= image_tag(@buttle.opponent_second.image.url(:small)) if  @buttle.try(:opponent_second)  %>
      <% end %>  
    </span><%= f.hidden_field :opponent_2, :id => "after_ajax_2"   %>
