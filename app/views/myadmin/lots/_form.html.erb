<div class="row-fluid center-elem ">
<%= form_for(@lot, :url => @lot.new_record? ? myadmin_lots_path : myadmin_lot_path ,:html => {:multipart => true, :class => "form-horizontal"}) do |f| %>
  <% if @lot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lot.errors.count, "error") %> prohibited this lot from being saved:</h2>

      <ul>
      <% @lot.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="control-group">
    <label class="control-label" for="inputEmail"> Имя </label>
    <div class="controls">
      <%= f.text_field :name %><br />
    </div>  
  </div>
  <div class="control-group">
    <label class="control-label" for="inputEmail"> Описание </label>   
    <div class="controls">
    <%= f.text_area :description, :rows => 5, :cols => 5 %><br />
    </div>     
  </div>  
  <div class="control-group">
    <label class="control-label" for="inputEmail"> Изображение </label>   
    <div class="controls">
    <%= @lot.new_record? ? "Крепите файлик" : image_tag(@lot.image.url(:small))  %><br />
    </div>     
  </div>   
  <div class="control-group">
    <div class="controls">  
      <%= f.file_field :image %> 
    </div>
  </div>
 
  


</div>  
<div class="row-fluid center-elem">  
  <div class="control-group">
    <div class="controls">    
      <%= f.submit :class => "btn", :value => @lot.new_record? ? "Создать лот" : "Обновить лот" %>
    </div>
  </div>
</div>    

<% end %>
