
<div class="row-fluid center-elem update_big_elem">
    <h1>Лоты для голосования</h1>
</div>    
<div>
<div class="row-fluid center-elem">
  <div class="span12">

<table class="table table-striped">
  <tr>
    <th>Имя</th>
    <th>
      <div class="center-elem">
        Описание
      </div>
    </th>
    <th>Картинка</th>
    <th></th>
    <th></th>
  </tr>

<% @lots.each do |lot| %>
  <tr>
    <td>
      <p class="name_wrap mywrap">
        <%= lot.name %>
      </p>
    </td>
    <td>
      <p class="desc_wrap mywrap">
        <%= lot.description %>
      </p>
    </td>
    <td><%= image_tag lot.image.url(:small), :class => "img-polaroid"  %></td>
    <td><%= link_to 'Редактировать', edit_myadmin_lot_path(lot), :class => "btn btn-warning" %></td>
    <td><%= link_to 'Удалить', myadmin_lot_path(lot), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Новый лот', new_myadmin_lot_path, :class=>"btn btn-large btn-simple" %>
  </div>
</div>
