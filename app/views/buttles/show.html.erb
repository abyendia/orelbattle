<p id="notice"><%= notice %></p>

<%= render :partial => 'shared/head_script_social_vote', 
		   :locals => {
		   		:shares_url 		=> @shares_url,
				:title 				=> @title,
				:desc 				=> @desc,
				:image_voice_left 	=> @image_voice_left,
				:image_voice_right  => @image_voice_right,
				:description1 		=> @description1,
				:description2 		=> @description2
    				  } 
%>
<%= render :partial => 'shared/head_general' %>
	<div class="row-fluid">
		<div class="span6 offset3">
			<p class="lead" style="text-align:center">
				<%= @buttle.name %>
			</p>	
		</div>		
	</div>	
	<div class="row-fluid">
		<div class="span6">
			<p class="leads" style="text-align:center">
				<% logo = image_tag(@buttle.opponent_first.image.url(:medium), :alt=>"Sample app", :class=>"img-rounded", :width=>"200")%>
					<%= link_to logo, root_path, :class => "thumbnail", 
												 :id => "b1",
												 :rel=>"tooltip"%>
			</p>
		</div>	
		<div class="span6">
			<p class="lead" style="text-align:center">
				<% logo = image_tag(@buttle.opponent_second.image.url(:medium), :alt=>"Sample app", :class=>"img-rounded", :width=>"200") %>				
					<%= link_to logo, root_path, :class => "thumbnail", :id => "b2", 
												 :rel=>"tooltip" %>
			</p>	
		</div>		
	</div>

	<div class="row-fluid">
		<div class="span6">

			<div id="input_voice_left" style="text-align:center">
			  <% if @vote_access %>	
  			    <%= render :partial => 'button_vote', :locals => {
  			    	 								             :location => "left",
  			    	 								             :buttle_id => @buttle.id,
  			    	 								         	 :lot_id => @buttle.opponent_first.id
  			    	 								         	} %>
  			  <% else %>
  			    <%= render :partial => 'button_vote_disabled', :locals => {
  			    	 								             :location => "left",
  			    	 								             :buttle_id => @buttle.id,
  			    	 								         	 :lot_id => @buttle.opponent_first.id
  			    	 								         	} %>
  			  <% end %>  
  			</div>							

		</div>	
		<div class="span6">
			<div id="input_voice_right" style="text-align:center">
			  <% if @vote_access %>  										
  			    <%= render :partial => 'button_vote', :locals => {
  			    	 								             :location => "right",
  			    	 								             :buttle_id => @buttle.id,
  			    	 								         	 :lot_id => @buttle.opponent_second.id
  			    	 								         	} %>
  			  <% else %>
  			    <%= render :partial => 'button_vote_disabled', :locals => {
  			    	 								             :location => "right",
  			    	 								             :buttle_id => @buttle.id,
  			    	 								         	 :lot_id => @buttle.opponent_second.id
  			    	 								         	} %>
  			  <% end %>    										
  			</div>		
		</div>	
	</div>	

<%#= render :partial => 'buttles/buttons_views_social' %>

	<div class="row-fluid">
		<div class="span6">
			<p style="text-align:center" class="p_count_voice_all">
  				<span class="count_voice_all" id="voice_all_left">
  					<%= @count_voite_left %>
  				</span>
			</p>	
		</div>	
		<div class="span6">
			<p style="text-align:center" class="p_count_voice_all">
  				<span class="count_voice_all" id="voice_all_right">
  					<%= @count_voite_right %>
  				</span>
			</p>	
		</div>				
	</div>		


